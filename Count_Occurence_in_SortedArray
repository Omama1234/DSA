#include<bits/stdc++.h>

using namespace std;
int first_occurence(int arr[],int n,int x)
{
    if(arr[0]==x)
    {
        return 0;
    }
    else
    {
        int l=1;
        int r=6;
        while(l<=r)
        {
            int mid=(l+r)/2;
            if(arr[mid]==x && arr[mid-1]!=x)
            {
                return mid;
            }
            else if(arr[mid]==x&&arr[mid-1]==x)
            {
                l--;
            }
            else if(arr[mid]>x)
            {
                r=mid-1;
            }
            else if(arr[mid]<x)
            {
                l=mid+1;
            }
        }

    }
    return -1;
}
int last_occurence(int arr[],int n,int x)
{
    if(arr[n-1]==x)
    {
        return n-1;
    }
    else
    {
        int l=0;
        int r=n-2;
        while(l<=r)
        {
            int mid=(l+r)/2;
            if(arr[mid]==x && arr[mid+1]!=x)
            {
                return mid;
            }
            else if(arr[mid]==x && arr[mid+1]==x)
            {
                l++;
            }
            else if(arr[mid]>x)
            {
                r=mid-1;
            }
            else if(arr[mid]<x)
            {
                l=mid+1;
            }

        }
    }
    return -1;
}

int count_occur(int arr[],int n,int x){

int first=first_occurence(arr,n,x);
if(first==-1)
    return 0;
return (last_occurence(arr,n,x)-first+1);

}


int main()
{
    int arr[]={10,20,20,20,30,30};
    int n=6;
    int x=1;
    //cout<<count(arr,arr+6,x)<<endl;

    cout<<count_occur(arr,n,x)<<endl;



}
